<background>
  <starttime>
    <year>2018</year>
    <month>1</month>
    <day>1</day>
    <hour>6</hour>
    <minute>20</minute>
    <second>0</second>
  </starttime>
  <!-- It's 06:20, we're showing the day for 13.666 hours till 20:00 -->
  <static>
    <duration>49200.0</duration>
    <file>/usr/share/backgrounds/bluefin/08-Aug-Day.jxl</file>
  </static>
  <!-- Day ended and starts to transition to night at 20:00, the transition -->
  <!-- lasts for 1 hour, ending at 21:00 -->
  <transition type="overlay">
    <duration>3600.0</duration>
    <from>/usr/share/backgrounds/bluefin/08-Aug-Day.jxl</from>
    <to>/usr/share/backgrounds/bluefin/08-Aug-Night.jxl</to>
  </transition>
  <!-- It's 21:00, we're showing the night for 8.333 hours till 05:20 -->
  <static>
    <duration>30000.0</duration>
    <file>/usr/share/backgrounds/bluefin/08-Aug-Night.jxl</file>
  </static>
  <!-- It's 05:20, and we're starting to transition to day. Transition -->
  <!-- completes at 06:20 -->
  <transition type="overlay">
    <duration>3600.0</duration>
    <from>/usr/share/backgrounds/bluefin/08-Aug-Night.jxl</from>
    <to>/usr/share/backgrounds/bluefin/08-Aug-Day.jxl</to>
  </transition>
</background>