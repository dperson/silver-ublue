<background>
  <starttime>
    <year>2018</year>
    <month>1</month>
    <day>1</day>
    <hour>7</hour>
    <minute>25</minute>
    <second>0</second>
  </starttime>
  <!-- It's 07:25, we're showing the day for 9.75 hours till 17:10 -->
  <static>
    <duration>35100.0</duration>
    <file>/usr/share/backgrounds/bluefin/01-Jan-Day.jxl</file>
  </static>
  <!-- Day ended and starts to transition to night at 17:10, the transition -->
  <!-- lasts for 1 hour, ending at 18:10 -->
  <transition type="overlay">
    <duration>3600.0</duration>
    <from>/usr/share/backgrounds/bluefin/01-Jan-Day.jxl</from>
    <to>/usr/share/backgrounds/bluefin/01-Jan-Night.jxl</to>
  </transition>
  <!-- It's 18:10, we're showing the night for 12.25 hours till 06:25 -->
  <static>
    <duration>44100.0</duration>
    <file>/usr/share/backgrounds/bluefin/01-Jan-Night.jxl</file>
  </static>
  <!-- It's 06:25, and we're starting to transition to day. Transition -->
  <!-- completes at 07:25 -->
  <transition type="overlay">
    <duration>3600.0</duration>
    <from>/usr/share/backgrounds/bluefin/01-Jan-Night.jxl</from>
    <to>/usr/share/backgrounds/bluefin/01-Jan-Day.jxl</to>
  </transition>
</background>