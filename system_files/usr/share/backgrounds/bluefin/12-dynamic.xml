<background>
  <starttime>
    <year>2018</year>
    <month>1</month>
    <day>1</day>
    <hour>7</hour>
    <minute>20</minute>
    <second>0</second>
  </starttime>
  <!-- It's 07:20, we're showing the day for 9.41666 hours till 16:45 -->
  <static>
    <duration>33900.0</duration>
    <file>/usr/share/backgrounds/bluefin/12-Dec-Day.jxl</file>
  </static>
  <!-- Day ended and starts to transition to night at 16:45, the transition -->
  <!-- lasts for 1 hour, ending at 17:45 -->
  <transition type="overlay">
    <duration>3600.0</duration>
    <from>/usr/share/backgrounds/bluefin/12-Dec-Day.jxl</from>
    <to>/usr/share/backgrounds/bluefin/12-Dec-Night.jxl</to>
  </transition>
  <!-- It's 17:45, we're showing the night for 12.58333 hours till 06:20 -->
  <static>
    <duration>45300.0</duration>
    <file>/usr/share/backgrounds/bluefin/12-Dec-Night.jxl</file>
  </static>
  <!-- It's 06:20, and we're starting to transition to day. Transition -->
  <!-- completes at 07:20 -->
  <transition type="overlay">
    <duration>3600.0</duration>
    <from>/usr/share/backgrounds/bluefin/12-Dec-Night.jxl</from>
    <to>/usr/share/backgrounds/bluefin/12-Dec-Day.jxl</to>
  </transition>
</background>