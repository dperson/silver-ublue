<background>
  <starttime>
    <year>2018</year>
    <month>1</month>
    <day>1</day>
    <hour>6</hour>
    <minute>30</minute>
    <second>0</second>
  </starttime>
  <!-- It's 08:30, we're showing the day for 9.5 hours till 18:00 -->
  <static>
    <duration>34200.0</duration>
    <file>/usr/share/backgrounds/bluefin/AutumnDay.webp</file>
  </static>
  <!-- Day ended and starts to transition to night at 18:00, the transition -->
  <!-- lasts for 2 hours, ending at 20:00 -->
  <transition type="overlay">
    <duration>7200.0</duration>
    <from>/usr/share/backgrounds/bluefin/AutumnDay.webp</from>
    <to>/usr/share/backgrounds/bluefin/AutumnNight.webp</to>
  </transition>
  <!-- It's 20:00, we're showing the night for 10.5 hours till 06:30 -->
  <static>
    <duration>37800.0</duration>
    <file>/usr/share/backgrounds/bluefin/AutumnNight.webp</file>
  </static>
  <!-- It's 06:30, and we're starting to transition to day. Transition -->
  <!-- completes at 08:30 -->
  <transition type="overlay">
    <duration>7200.0</duration>
    <from>/usr/share/backgrounds/bluefin/AutumnNight.webp</from>
    <to>/usr/share/backgrounds/bluefin/AutumnDay.webp</to>
  </transition>
</background>