<background>
  <starttime>
    <year>2018</year>
    <month>1</month>
    <day>1</day>
    <hour>6</hour>
    <minute>50</minute>
    <second>0</second>
  </starttime>
  <!-- It's 06:50, we're showing the day for 12.41666 hours till 19:15 -->
  <static>
    <duration>44700.0</duration>
    <file>/usr/share/backgrounds/bluefin/08-Aug-Day.jxl</file>
  </static>
  <!-- Day ended and starts to transition to night at 19:15, the transition -->
  <!-- lasts for 1 hour, ending at 20:15 -->
  <transition type="overlay">
    <duration>3600.0</duration>
    <from>/usr/share/backgrounds/bluefin/08-Aug-Day.jxl</from>
    <to>/usr/share/backgrounds/bluefin/08-Aug-Night.jxl</to>
  </transition>
  <!-- It's 20:15, we're showing the night for 9.58333 hours till 05:50 -->
  <static>
    <duration>34500.0</duration>
    <file>/usr/share/backgrounds/bluefin/08-Aug-Night.jxl</file>
  </static>
  <!-- It's 05:50, and we're starting to transition to day. Transition -->
  <!-- completes at 06:50 -->
  <transition type="overlay">
    <duration>3600.0</duration>
    <from>/usr/share/backgrounds/bluefin/08-Aug-Night.jxl</from>
    <to>/usr/share/backgrounds/bluefin/08-Aug-Day.jxl</to>
  </transition>
</background>