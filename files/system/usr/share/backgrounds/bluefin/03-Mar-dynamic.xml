<background>
  <starttime>
    <year>2018</year>
    <month>1</month>
    <day>1</day>
    <hour>7</hour>
    <minute>15</minute>
    <second>0</second>
  </starttime>
  <!-- It's 07:15, we're showing the day for 12 hours till 19:15 -->
  <static>
    <duration>43200.0</duration>
    <file>/usr/share/backgrounds/bluefin/03-Mar-Day.jxl</file>
  </static>
  <!-- Day ended and starts to transition to night at 19:15, the transition -->
  <!-- lasts for 1 hour, ending at 20:15 -->
  <transition type="overlay">
    <duration>3600.0</duration>
    <from>/usr/share/backgrounds/bluefin/03-Mar-Day.jxl</from>
    <to>/usr/share/backgrounds/bluefin/03-Mar-Night.jxl</to>
  </transition>
  <!-- It's 20:15, we're showing the night for 10 hours till 06:15 -->
  <static>
    <duration>36000.0</duration>
    <file>/usr/share/backgrounds/bluefin/03-Mar-Night.jxl</file>
  </static>
  <!-- It's 06:15, and we're starting to transition to day. Transition -->
  <!-- completes at 07:15 -->
  <transition type="overlay">
    <duration>3600.0</duration>
    <from>/usr/share/backgrounds/bluefin/03-Mar-Night.jxl</from>
    <to>/usr/share/backgrounds/bluefin/03-Mar-Day.jxl</to>
  </transition>
</background>