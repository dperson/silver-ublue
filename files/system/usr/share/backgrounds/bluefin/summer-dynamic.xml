<background>
  <starttime>
    <year>2018</year>
    <month>1</month>
    <day>1</day>
    <hour>5</hour>
    <minute>45</minute>
    <second>0</second>
  </starttime>
  <!-- It's 07:45, we're showing the day for 11.5 hours till 19:15 -->
  <static>
    <duration>41400.0</duration>
    <file>/usr/share/backgrounds/bluefin/SummerDay.webp</file>
  </static>
  <!-- Day ended and starts to transition to night at 19:15, the transition -->
  <!-- lasts for 2 hours, ending at 21:15 -->
  <transition type="overlay">
    <duration>7200.0</duration>
    <from>/usr/share/backgrounds/bluefin/SummerDay.webp</from>
    <to>/usr/share/backgrounds/bluefin/SummerNight.webp</to>
  </transition>
  <!-- It's 21:15, we're showing the night for 8.5 hours till 05:45 -->
  <static>
    <duration>30600.0</duration>
    <file>/usr/share/backgrounds/bluefin/SummerNight.webp</file>
  </static>
  <!-- It's 05:45, and we're starting to transition to day. Transition -->
  <!-- completes at 07:45 -->
  <transition type="overlay">
    <duration>7200.0</duration>
    <from>/usr/share/backgrounds/bluefin/SummerNight.webp</from>
    <to>/usr/share/backgrounds/bluefin/SummerDay.webp</to>
  </transition>
</background>