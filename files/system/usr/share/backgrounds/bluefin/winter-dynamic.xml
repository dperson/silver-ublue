<background>
  <starttime>
    <year>2018</year>
    <month>1</month>
    <day>1</day>
    <hour>6</hour>
    <minute>15</minute>
    <second>0</second>
  </starttime>
  <!-- It's 08:15, we're showing the day for 8.5 hours till 16:45 -->
  <static>
    <duration>30600.0</duration>
    <file>/usr/share/backgrounds/bluefin/WinterDay.webp</file>
  </static>
  <!-- Day ended and starts to transition to night at 16:45, the transition -->
  <!-- lasts for 2 hours, ending at 18:45 -->
  <transition type="overlay">
    <duration>7200.0</duration>
    <from>/usr/share/backgrounds/bluefin/WinterDay.webp</from>
    <to>/usr/share/backgrounds/bluefin/WinterNight.webp</to>
  </transition>
  <!-- It's 18:45, we're showing the night for 11.5 hours till 06:15 -->
  <static>
    <duration>41400.0</duration>
    <file>/usr/share/backgrounds/bluefin/WinterNight.webp</file>
  </static>
  <!-- It's 06:15, and we're starting to transition to day. Transition -->
  <!-- completes at 08:15 -->
  <transition type="overlay">
    <duration>7200.0</duration>
    <from>/usr/share/backgrounds/bluefin/WinterNight.webp</from>
    <to>/usr/share/backgrounds/bluefin/WinterDay.webp</to>
  </transition>
</background>