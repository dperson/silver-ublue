<background>
  <starttime>
    <year>2018</year>
    <month>1</month>
    <day>1</day>
    <hour>7</hour>
    <minute>0</minute>
    <second>0</second>
  </starttime>
  <!-- It's 07:00, we're showing the day for 10.75 hours till 17:45 -->
  <static>
    <duration>38700.0</duration>
    <file>/usr/share/backgrounds/bluefin/02-Feb-Day.jxl</file>
  </static>
  <!-- Day ended and starts to transition to night at 17:45, the transition -->
  <!-- lasts for 1 hour, ending at 18:45 -->
  <transition type="overlay">
    <duration>3600.0</duration>
    <from>/usr/share/backgrounds/bluefin/02-Feb-Day.jxl</from>
    <to>/usr/share/backgrounds/bluefin/02-Feb-Night.jxl</to>
  </transition>
  <!-- It's 18:45, we're showing the night for 11.25 hours till 06:00 -->
  <static>
    <duration>40500.0</duration>
    <file>/usr/share/backgrounds/bluefin/02-Feb-Night.jxl</file>
  </static>
  <!-- It's 06:00, and we're starting to transition to day. Transition -->
  <!-- completes at 07:00 -->
  <transition type="overlay">
    <duration>3600.0</duration>
    <from>/usr/share/backgrounds/bluefin/02-Feb-Night.jxl</from>
    <to>/usr/share/backgrounds/bluefin/02-Feb-Day.jxl</to>
  </transition>
</background>